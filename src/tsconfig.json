{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es6",
      "dom"
    ],
    "types": [
      "reflect-metadata"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "../dist",
    "typeRoots": [
      "../node_modules/@types"
    ],
    "allowUnreachableCode": false,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true
  }
}
